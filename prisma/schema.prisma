// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                String @id @default(uuid())
  student_id        String @unique
  name              String
  img_url           String
  email             String @unique
  person_id         String
  phone_1           String
  phone_2           String
  mobile            String
  emergency_phone   String
  emergency_contact String
  residence_addr    String
  mailing_addr      String
}

model Score {
  id           String   @id @default(uuid())
  student_id   String   
  school_year  Int
  semester     Int
  chinese_score Int
  math_score    Int
  english_score Int
}